<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="vpiCirclePageIndicatorStyle">@style/CirclePageIndicator</item>
    </style>

    <style name="CirclePageIndicator">
        <item name="centered">true</item>
        <item name="fillColor">@color/black</item>
        <item name="pageColor">@color/white</item>
        <item name="radius">3.5dp</item>
        <item name="snap">true</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>
